<%- include('partials/header') %>
</div>

<div class="container" style="margin-top: 100px;">
    <section class="filter ">
        <ul>
            <li class="list active" data-filter="all">All</li>
            <li class="list" data-filter="electric-Guitar">Electric Guitar</li>
            <li class="list" data-filter="acoustic-Guitar">Acoustic Guitar</li>
            <li class="list" data-filter="bass-Guitar">Bass Guitar</li>
            <li class="list" data-filter="accessories">Accessories</li>
        </ul>
    </section>
    <div class="row animation2">
      <% product.forEach(function(product){ %>
        <div class="col-lg-3 col-md-6 itemBox <%= product.filtered %>">
          <div class="card" style="width: 100%;">
            <img class="card-img-top" src="<%= product.img %>" alt="Card image cap">
            <div class="card-body"  style="text-align: center;">
              <h4 class="card-title"><%= product.name %></h4>
              <p class="card-text">Price: <%= product.price %></p>
              <a href="#" data-name="<%= product.dataname %>" data-price="<%= product.dataprice %>" class="add-to-cart btn btn-outline-info">Add to cart</a>
              <a href="/view-products/<%= product._id %> " class=" btn btn-outline-success">View Product</a>
            </div>
          </div>
        </div>

        <% }); %>

     </div>
</div>




  
 

<%- include('partials/footer') %>